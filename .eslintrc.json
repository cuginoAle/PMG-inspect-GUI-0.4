{
  "extends": ["next/core-web-vitals"],
  "plugins": ["unused-imports"],
  "ignorePatterns": ["src/components/ðŸª¦ parked-components/**"],
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          {
            "group": ["../*"],
            "message": "Please use absolute imports instead of parent-directory relative imports. Use the configured path aliases (e.g., \"components/\") for importing components."
          }
        ]
      }
    ],
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ]
  }
  // "settings": {
  //   "import/ignore": ["src/components/parked-components/**"]
  // }
}
