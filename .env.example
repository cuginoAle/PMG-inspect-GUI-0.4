###############################################################
# Environment Variable Example File
# Copy to .env.local (never commit .env.local) and adjust values.
# Lines beginning with '#' are comments / documentation.
###############################################################

############################
# Core Application Auth
############################
# Basic auth credentials used by middleware for /protected routes.
PROTECTED_BASIC_AUTH_USER=admin
PROTECTED_BASIC_AUTH_PASS=change-me-please

############################
# External API / Mapping
############################
# Public Mapbox token used client-side (safe to expose, treat as scoped key).
NEXT_PUBLIC_MAPBOX_API_KEY=your-mapbox-access-token-here

############################
# Backend API Base / Proxy Behavior
############################
# The direct origin of the backend service. Used for SSR and tooling.
# Override if backend not on localhost (e.g. http://api.internal:8088 or https://api.example.com)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8088

# Port portion (only used if NEXT_PUBLIC_API_BASE_URL not set). Usually leave as default.
API_PORT=8088

# When set to '1', disables Next.js rewrite proxy and makes the browser call the backend directly.
# Only enable if backend sends correct CORS headers (Safari strictness otherwise causes failures).
NEXT_PUBLIC_API_DIRECT=0

############################
# Test / E2E Controls
############################
# Skip starting the mock API server in Playwright tests.
NO_MOCK_API=
# Allow tests to proceed even if port 8088 already has a real backend (NON-DETERMINISTIC).
ALLOW_REAL_BACKEND=

# Set automatically in some scripts to signal test context; override rarely needed.
E2E_TEST=1
NEXT_PUBLIC_E2E_TEST=1

############################
# Node / Build Environment (usually auto-set)
############################
# NODE_ENV is managed by Next.js (development / production). Only override if you know why.
# NODE_ENV=development

############################
# Optional Diagnostics / Feature Flags
############################
# Force direct calls in browser at runtime (debug) by opening DevTools and executing:
#   window.__API_DIRECT__ = true
# (No env var required; included here for documentation only.)

############################
# CI / Automation (usually provided by CI environment)
############################
# CI=true

